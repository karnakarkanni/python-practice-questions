n=int(input(""))
for i in range(n):
    for j in range(n-i-1):
        print(" ",end=" ")
    for k in range(2*i+1):
        print("*",end=" ")
    print()
    
    
    
n=int(input("enter a row"))
for i in range(1, n + 1):
    spaces = " " * (n - i)
    hashtags = "#" * i
    print(spaces + hashtags)

